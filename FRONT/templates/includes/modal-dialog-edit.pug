.container-modal#modal-dialog-edit
  .container-form
    .form(data-validate="async", data-func-validate="editDialog", novalidate)
      fieldset
        label Nombre de diálogo
        input.input-upper#name-dialog-edit(type="text", placeholder="Escribe el nombre de la entidad", required)

        //- fieldset
        //-   label Si el bot reconoce
